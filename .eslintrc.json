{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:unicorn/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": 0,
    "no-console": 0,
    "arrow-parens": 0,
    "camelcase": 0,
    "no-plusplus": 0,
    "prefer-const": 0,
    "no-param-reassign": 0,
    "prefer-promise-reject-errors": 0,
    "import/no-cycle": 0,
    "array-callback-return": 0,
    "no-loop-func": 0,
    "unicorn/prefer-optional-catch-binding": 0,
    "unicorn/no-null": 0,
    "unicorn/no-array-for-each": 0,
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          "req": false,
          "res": false,
          "cmd": {
            "command": true
          }
        }
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.test.js",
        "*.spec.js"
      ],
      "rules": {
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "warn",
        "jest/no-identical-title": "warn",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "warn"
      }
    }
  ]
}